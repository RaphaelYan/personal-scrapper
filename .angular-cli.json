{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "personal-scrapper"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.scss",
        "../node_modules/font-awesome/css/font-awesome.css",
        "../node_modules/ngx-deck/assets/scss/stack.component.scss",
        "../node_modules/ngx-deck/assets/scss/touch-animation.directive.scss"
      ],
      "scripts": [
        "../node_modules/ngx-deck/assets/js/modernizr-custom.js",
        "../node_modules/ngx-deck/assets/js/dynamics.min.js",
        "../node_modules/ngx-deck/assets/js/main.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}
